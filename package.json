    "@sanity/image-url": "0.140.22",
    "classnames": "2.3.1",
    "date-fns": "2.22.1",
    "next": "10.2.0",
    "next-sanity": "0.1.12",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "7.3.6",
    "swr": "0.5.5"
  },
  "devDependencies": {

    "@fullhuman/postcss-purgecss": "4.0.3",
    "@sanity/cli": "2.22.0",
    "lerna": "4.0.0",
    "postcss-preset-env": "6.7.0",
    "tailwindcss": "2.1.2"

  }
