    "classnames": "^2.2.6",
    "date-fns": "2.23.0",
    "next": "^10.2.0",
    "next-sanity": "0.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.3.6",
    "styled-components": "^5.3.0",
    "swr": "^0.5.5"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@sanity/cli": "^2.0.5",
    "lerna": "^4.0.0",
    "postcss-preset-env": "^6.7.0",
    "tailwindcss": "2.2.7"
  }
